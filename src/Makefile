include ../make.inc

# suffix rules
.SUFFIXES: .o .F90 .cpp
.F90.o: 
	$(MPIF90) $(MPIF90_FLAGS) $(LIBS) -c $<

%.o: %.mod

SRCS := cg.F90 pot.F90 fileio.F90 comm.F90 init.F90 bo.F90 qeq.F90 param.F90 stress.F90 main.F90
OBJS := $(SRCS:.F90=.o) 

EXE = ../rxmd

$(EXE): $(OBJS)
	$(MPIF90) $(MPIF90_FLAGS) -o $(EXE) $(OBJS) module.o $(LIBS)

$(OBJS) : base.mod

base.mod: module.F90
	$(MPIF90) $(MPIF90_FLAGS) -c module.F90

main.F90 : cg.mod

cg.mod : cg.o

fileio.o : param.o

clean:
	rm -f PI* $(OBJS) $(EXE) *.mod *.MOD module.o
